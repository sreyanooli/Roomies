<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.niu.cs.shreya.roomies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/roomies_launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/roomies_launcher_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".UserHomeActivity" />
        <activity android:name=".ForgotPwdActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".UpdateUserInfoActivity" />
        <activity android:name=".ViewWallActivity" />
        <activity android:name=".WriteOnWallActivity"></activity>
    </application>

</manifest>